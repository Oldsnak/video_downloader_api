# App
APP_NAME=video_downloader_api
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["*"]

# Allowlist (MUST be valid JSON list)
ALLOWED_DOMAINS=["youtube.com","youtu.be","instagram.com","facebook.com","fb.watch","tiktok.com"]

# Storage
DOWNLOAD_DIR=downloads
MAX_CONCURRENT_DOWNLOADS=3
MAX_FILE_SIZE_MB=2000

# DB (SQLite - easiest)
DATABASE_URL=sqlite:///./video_downloader.db

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Optional API key (empty means disabled)
API_KEY=
